{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "preserve",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["@tanstack/react-router"],
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "target": "ES2020",
    "paths": {
      "@/*": ["./frontend/src/*"]
    }
  },
  "include": [
    "frontend/src/**/*",
    ".envs/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "frontend/public/webpack_bundles"
  ]
}
